    <div class="container">
        <div class="row pt-5">
            <div class="col-md-4"></div>
            <div class="col-md-4 p-5 border border-info">
                <h1 class="text-center">LOG IN</h1>
                <p class="text-center">Login for existing users</p><br>
                <p class="text-center border-3 border-bottom mb-3 pb-3" style="color: red;">{{message}}</p>
                <form action="/route/login" method="POST">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" class="form-control" placeholder="E-mail" name="email" id="email" aria-describedby="emailHelp">
            <span id="errorEmail"></span>
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label" >Password</label>
              <input type="password" name="password" class="form-control" id="password">
              <span id="errorPassword"></span>
            </div>
            
            <div class="text-center">
                <button type="submit" class="btn btn-dark">Login</button>
            </div>
            
          </form>
          {{#if locals.logout}}
               <div class="alert alert-success text-center">
                 <p>{{logout}}</p>
               </div>
               {{/if}}
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
    <script>
      const email=document.getElementById("email");
      const password=document.getElementById("password");
       const form=document.getElementById("form");
       const error1=document.getElementById("errorEmail");
       const error2=document.getElementById("errorPassword");
       form.addEventListener('submit',(e)=>{
         let message1=[];
         let message2=[];
         if(email.value==''||email.value==null){
           message1.push("please enter the email");

         }
         if(password.value==''||password.value==null){
           message2.push("please enter the password");

         }else if(password.value.length<5){
           message2.push("password must be atleast 5 char")
         }
         if(message1.length>0){
           e.preventDefault();
           error1.innerText=message1.join(' ')
         }
         if(message2.length>0){
           error2.innerText=message2.join(' ')
         }

       })

    </script>
   
